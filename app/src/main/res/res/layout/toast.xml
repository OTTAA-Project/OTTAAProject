    android:layout_height="fill_parent"
    android:padding="8dp"
    android:background="#666">
    <TextView android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF1"
        android:textSize="18sp"
        />
</LinearLayout>