<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    android:backgroundTint="@color/quantum_bluegrey800"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
     <TextView
         android:id="@+id/title"
         android:layout_width="0dp"
         android:layout_height="0dp"
        android:textColor="@color/White"
         android:text="Armar Frases"
         android:textAlignment="center"
         android:gravity="center"
         android:textSize="25dp"

         android:background="@drawable/ic_shape_bottom_orange"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toTopOf="@id/ruleGames"
         app:layout_constraintVertical_weight="1"
         />
        <TextView
            android:id="@+id/ruleGames"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/White"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:textSize="15dp"
            android:background="@color/quantum_bluegrey800"
            android:text="Objetivo : Armar Frases \n 1) El sistema tira los pictogramas de una frase ordenado de manera aleatoria
            \n 2) El usuario selecciona los pictogramas buscando armar la frase \n 3) El usuario Toca el boton hablar y espera a la verificacion del sistema. \n 4) Luego de verificar pueden pasar dos cosas  se vuelve al punto uno o el usuario debe  seleccionar el boton borrar "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_weight="3"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>